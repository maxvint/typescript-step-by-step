{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"module": "ESNext",
		"noImplicitAny": false,
		"outDir": "./dist/",
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
		"baseUrl": "./",
		"paths": {
		  "@/*": [
			"src/*"
		  ],
		},
		"lib": [ "es2015", "dom", "es7", "es6","es5"]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],
	"files": [
		"src/main.ts",
		"typings/index.d.ts",
	]
}